@{
    ViewData["Title"] = "Dashboard";
}

<h2>Dashboard</h2>

<div>
    
    <div class="button-group">
        <button type="button" class="btn btn-custom">View Account</button>
        <button type="button" class="btn btn-custom">User Settings</button>
        <button type="button" class="btn btn-custom">Account Balance</button>

    </div>
</div>

<div class="mt-3">
    <form asp-controller="Account" asp-action="Logout" method="post">
        <button type="submit" class="btn btn-secondary">Logout</button>
    </form>
</div>

<style>
 
    .btn-custom {
        background-color: #808080; 
        color: #fff; 
        border: none;
        margin-right: 10px; 
    }

    
    .mt-3 .d-inline {
        display: inline-block;
        vertical-align: middle;
    }
</style>

